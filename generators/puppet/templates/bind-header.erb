$TTL 3h
@                       IN      SOA     dns.grid5000.fr. nsmaster.dns.grid5000.fr. (
                                <%= Time.new().strftime("%Y%m%d") %>00 ; serial (YYYYMMDDSS)
                                4h         ; refresh
                                1h         ; retry
                                4w         ; expire
                                1h)        ; negative caching

@			IN	NS	dns.grid5000.fr.<%
if output_file == "#{site_uid}.db" %>
@                      IN      A       <%= site['frontend_ip'] %><% end %>
@                 MX    10      mail.<%= site_uid %>.grid5000.fr.
